                                Aspect="AspectFit" HeightRequest="100"/>
                        </DataTemplate>
                    </dg:DataGridColumn.CellTemplate>
                </dg:DataGridColumn>
                <dg:DataGridColumn Title="X4" PropertyName="GridColumn3" Width="100" SortingEnabled="False">
